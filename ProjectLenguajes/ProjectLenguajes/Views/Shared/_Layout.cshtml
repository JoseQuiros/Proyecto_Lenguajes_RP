<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectLenguajes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectLenguajes.styles.css" asp-append-version="true" />
</head>
<body>
<div class="entry-form">
	<h1>Login</h1>
    <form action="" id="login-entry-form">
    	<input type="text" id="emailUser" name="emailUser" placeholder="Email" required="required" />
        <input type="password" id="passwordUser" name="passwordUser" placeholder="Password" required="required" />
        <button type="submit" onsubmit="return LogIn();" class="btn btn-primary btn-block btn-large">Let me in.</button>
        <label id="result"></label>
    </form>
</div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ProjectLenguajes - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
