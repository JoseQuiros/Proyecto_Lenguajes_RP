                                   <input type="password" name="password" id="password" class="form-control" placeholder="Your password" required="">


                                   <button class="submit-btn form-control" onsubmit="return Add();" id="form-submit">Add</button>
                                   <button class="submit-btn form-control" onclick="Clear();return false" id="form-cancel">Cancel</button>
