     <section class="about section" id="reservation">
    <div class="container">
        <div class="row">
                         
            <div class="col-md-6">
                <h2 class="text-dark" data-aos="fade-up" data-aos-delay="200">Elija su parqueo </h2>
                <select class="form-control without-margin" name="idParkingSelection" id="idParkingSelection"></select>
                <div class="red">Reservado</div>
                <div class="green">disponible</div>
                <div class="blue">Seleccionado</div>
            </div>
            <div class="parent">
                <div class="child1">
                    <div  id="bus"></div>
                </div>
                <div class="child2 ml-3">
                    <div class="entry-form">
                        <form action="" id="reservation-entry-form">
                              <h2 class="text-black" data-aos="fade-up" data-aos-delay="200">Reservar espacio </h2>

                                   <input type="text" name="id" id="id" hidden>

                                   <label class="text-black" for="idTime">Tiempo: </label>
                                   <select id="idTime" class="form-control" name="idTime">                                           
                                   </select>

                                 
                           
                                   <label for="cantTime">Elija la cantidad de tiempo </label>                 
                                   <input type="number" name="cantTime" id="cantTime" class="form-control" placeholder="0" required="">
                                   <label for="idType">Numero del espacio: </label>
                                   <input type="text" name="slotNumber" id="slotNumber" class="form-control" placeholder="" required="" disabled>
                                   <label for="idType">Nombre del paqueo: </label>
                                   <input type="text" name="parkingName" id="parkingName" class="form-control" placeholder="" required="" disabled>
                                   <label for="dateHour">Fecha y hora: </label>

                                   <input type="datetime-local" id="dateHour"
                                       name="dateHour" value="2022-06-03T19:30"
                                       min="2022-06-07T00:00" max="2026-06-14T00:00">


                                   <button class="submit-btn form-control" onsubmit="return AddReservation();" id="form-submit">Reservar</button>
                                   <button class="submit-btn form-control" onclick="Clear();return false" id="form-cancel">Cancelar</button>
                             

                                   <label id="resultReservation"></label>
                        </form>

                    </div>
                </div>
            </div>
        </div>                       
    </div>
</section>

    
   <!-- Reservation section -->

