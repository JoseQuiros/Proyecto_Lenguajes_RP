                            </table>
                                   
                                <!-- Modal Vehicle delete-->
                           <div class="modal fade" id="modalVehicleDelete" tabindex="-1" role="dialog" aria-labelledby="membershipFormLabel" aria-hidden="true">
                              <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content" role="document">
                                  <div class="modal-header">
                                       <h2 class="modal-title" id="membershipFormLabel">Eliminar vehiculo</h2>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <form action="" id="vehicle-entry-form">
                                  <div class="modal-body">

                                       <input type="text" name="idVehicleModal" id="idVehicleModalD"  disabled>

                                       <input type="text" name="brandModal" id="brandModalD" class="form-control" placeholder="Brand" required=""  disabled>
                                    
                                       <input type="text" name="modelModal" id="modelModalD" class="form-control" placeholder="Model" required=""  disabled>
                                    
                                       <input type="text" name="colorModal" id="colorModalD" class="form-control" placeholder="Color" required=""  disabled>
                                      
                                       <input type="number" name="yearModal" id="yearModalD" class="form-control" placeholder="Year" required=""  disabled>
                                     
                                       <input type="text" name="registerModal" id="registerModalD" class="form-control" placeholder="Register of your Vehicle" required="" disabled>
                                            
                                  
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                    <button type="button" class="btn btn-primary" id="closeModal" onclick="return DeleteVehicleById();">Confirmar</button>
                                    <label id="modalResultDelete"></label>
                                  </div>
                                  </form>
                                </div>
                              </div>
                            </div>
                        </div>
                     </div>
            
            </div>
       
    </section> 
    
